<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="textView_title">
        <item name="android:textSize">@dimen/title_main_text</item>
        <item name="android:textColor">@color/text_inverse</item>
    </style>

    <style name="textView_item_title_bold">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textView_item_title">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textView_item_desc">
        <item name="android:textSize">@dimen/description_text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textView_footer">
        <item name="android:textSize">@dimen/description_text</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:textColor">@color/text_inverse</item>
        <item name="android:background">@color/background_inverse</item>
    </style>

</resources>

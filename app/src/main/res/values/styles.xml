<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="textView_item_title">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textView_item_desc">
        <item name="android:textSize">@dimen/description_text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textView_footer">
        <item name="android:textSize">@dimen/description_text</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:textColor">@color/text_inverse</item>
        <item name="android:background">@color/background_inverse</item>
    </style>

</resources>
